<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.wss</groupId>
	<artifactId>wss-agent-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>wss-agent-parent</name>
	<description>The agent parent</description>

	<properties>
		<maven.version>3.0.4</maven.version>
		<http.version>4.1.3</http.version>
		<jackson.version>1.9.2</jackson.version>
		<junit.version>4.10</junit.version>
	</properties>

	<modules>
		<module>wss-agent-domain</module>
		<module>wss-agent-mavenplugin</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<!-- Maven -->
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-plugin-api</artifactId>
				<version>${maven.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
			    <groupId>org.apache.maven</groupId>
			    <artifactId>maven-core</artifactId>
			    <version>${maven.version}</version>
			    <scope>provided</scope>
			</dependency>
			
			<!-- Utilities -->
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpclient</artifactId>
				<version>${http.version}</version>
			</dependency>
			<dependency>
				<groupId>org.codehaus.jackson</groupId>
				<artifactId>jackson-mapper-asl</artifactId>
				<version>${jackson.version}</version>
			</dependency>
			
			<!-- Testing -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>
			
		</dependencies>
	</dependencyManagement>
	
	<distributionManagement>
		<repository>
			<id>wss-nexus-server</id>
			<name>White Source nexus repository manager</name>
			<uniqueVersion>false</uniqueVersion>
			<url>http://nexus.whitesourcesoftware.com/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>wss-nexus-server</id>
			<name>White Source nexus repository manager</name>
			<uniqueVersion>false</uniqueVersion>
			<url>http://nexus.whitesourcesoftware.com/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

</project>